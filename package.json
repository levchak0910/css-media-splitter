{
  "name": "css-media-splitter",
  "type": "module",
  "version": "0.2.6",
  "packageManager": "pnpm@9.12.0",
  "description": "Utils that split css by media queries into dedicated files. Supports: plain html files, Vite and Nuxt.",
  "author": "Levcsák Sándor",
  "license": "MIT",
  "homepage": "https://github.com/levchak0910/css-media-splitter",
  "repository": {
    "type": "git",
    "url": "https://github.com/levchak0910/css-media-splitter"
  },
  "bugs": "https://github.com/levchak0910/css-media-splitter/issues",
  "keywords": [
    "css",
    "media query",
    "media query split",
    "media query separate",
    "vite-plugin",
    "vite plugin",
    "nuxt-module",
    "nuxt module"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vite-plugin": {
      "import": "./dist/integrations/vite-plugin.js",
      "require": "./dist/integrations/vite-plugin.cjs"
    },
    "./nuxt-module": {
      "import": "./dist/integrations/nuxt-module.js",
      "require": "./dist/integrations/nuxt-module.cjs"
    },
    "./plain": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./api": {
      "import": "./dist/api.js",
      "require": "./dist/api.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "*.d.ts",
    "assets",
    "dist"
  ],
  "engines": {
    "node": ">=v18.13.0"
  },
  "scripts": {
    "build": "tsup && tsx scripts/post-build-lib.ts",
    "build:all": "pnpm build && pnpm -r build",
    "eslint": "eslint --ignore-pattern='*.md'",
    "lint": "pnpm eslint .",
    "fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:all": "pnpm test && pnpm -r test",
    "test:watch": "vitest",
    "release": "bumpp package.json --commit --push --tag",
    "package-check": "attw --pack .",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/kit": "^3.17.3",
    "@nuxt/schema": "^3.17.3",
    "acorn": "^8.14.1",
    "acorn-walk": "^8.3.4",
    "etag": "^1.8.1",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@arethetypeswrong/cli": "^0.18.1",
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.52.0",
    "@types/babel__core": "^7.20.5",
    "@types/cpx": "^1.5.5",
    "@types/etag": "^1.8.3",
    "@types/node": "^22.15.19",
    "@types/uglify-js": "^3.17.5",
    "@unhead/schema": "^2.0.9",
    "bumpp": "^10.1.1",
    "cpx": "^1.5.0",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.52.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "uglify-js": "^3.19.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "pnpm": {
    "overrides": {
      "parse-url": "^10.0.0"
    }
  }
}
